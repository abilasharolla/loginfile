<script type="text/javascript">

function AllowAlphabet(){
if (!frm.alphabet.value.match(/^[a-zA-Z]+$/) && frm.alphabet.value !="")
{
frm.alphabet.value="";
frm.alphabet.focus();
alert("Please Enter only alphabets in text");
}
}
</script>
